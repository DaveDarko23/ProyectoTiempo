<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AdminMenuActivity">

    <Button
        android:id="@+id/createWorkersButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear Cuentas para Trabajadores"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/createTasksButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear Tareas"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/showUsersButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mostrar Usuarios"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/showTasksButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mostrar Usuarios"
        android:layout_marginTop="16dp" />

    <!-- Agrega más botones según sea necesario -->

</LinearLayout>